<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/primary_dark"
    android:layout_height="match_parent">

    <ImageView

        android:id="@+id/ic_take_profilepic"
        android:background="@drawable/bg_take_profilepic"
        android:padding="16dp"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:src="@drawable/take_profile_pic"
        android:layout_width="96dp"
        android:layout_height="96dp" />

    <TextView
        android:id="@+id/title_user_name"
        tools:text="Ryan"
        android:layout_centerHorizontal="true"
        android:textSize="34sp"
        android:layout_below="@id/ic_take_profilepic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v7.widget.RecyclerView

        android:id="@+id/drawer_links_list"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/title_user_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </android.support.v7.widget.RecyclerView>

</RelativeLayout>